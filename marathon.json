{
  "id": "/newscron/newscron-crawler",
  "cmd": null,
  "cpus": 0.5,
  "mem": 3000,
  "disk": 0,
  "instances": 1,
  "constraints": [
    [
      "hostname",
      "CLUSTER",
      "46.4.71.105"
    ]
  ],
  "container": {
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "/home/DISCO_Dictionaries/",
        "hostPath": "/root/DISCO_Dictionaries/",
        "mode": "RW"
      }
    ],
    "docker": {
      "image": "docker-registry.newsriver.io:5000/newscron-crawler:latest",
      "network": "HOST",
      "privileged": false,
      "parameters": [],
      "forcePullImage": true
    }
  },
  "healthChecks": [
    {
      "path": "/RSSCrawlerStatus",
      "protocol": "HTTP",
      "portIndex": 0,
      "gracePeriodSeconds": 90,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false
    }
  ]
}
